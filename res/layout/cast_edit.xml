<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <!--  giving a weight prioritizes this view over others, 
    	letting the last item fall to the bottom -->
    <ScrollView
     android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="vertical"
      android:isScrollContainer="true"
      android:scrollbars="vertical"
      >
    <LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    
	<EditText android:id="@+id/cast_title"
	 android:hint="Cast Title"
	 android:layout_width="fill_parent"
	 android:layout_height="wrap_content"
	 android:singleLine="true" 
	/>
            
  	<TextView
	 android:text="@string/privacy_header"
	 android:layout_width="fill_parent"
	 android:layout_height="wrap_content" />
	 
	<Spinner android:id="@+id/privacy"
	 android:layout_width="fill_parent"
	 android:layout_height="wrap_content"
	 android:prompt="@string/privacy_spinner" 
	 android:entries="@array/privacy" />
	        
            
    <ImageView android:id="@+id/cast_thumb"
    android:adjustViewBounds="true"
    android:layout_height="200dip" 
    android:layout_width="fill_parent" 
    android:src="@drawable/icon_default_cast"
    android:layout_gravity="center_horizontal" />
	
	
	<EditText android:id="@+id/cast_description"
	 android:hint="Description"
	 android:layout_width="fill_parent"
	 android:layout_height="wrap_content"
	 android:minLines="3"
	 android:inputType="textMultiLine"
	/>  
	
		
	<LinearLayout android:layout_width="fill_parent"
 		android:layout_height="wrap_content"
 		android:orientation="horizontal">
	 
		 <TextView android:text="@string/cast_location"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content" />
			
		<edu.mit.mel.locast.mobile.widget.LocationLink android:id="@+id/location"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content" />
		
	</LinearLayout>
		
	<LinearLayout android:layout_width="fill_parent"
	 android:layout_height="wrap_content"
	 android:orientation="horizontal">
	 
		 <TextView android:text="@string/current_location"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content" />
			
		<edu.mit.mel.locast.mobile.widget.LocationLink android:id="@+id/location_new"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content" />
		
	</LinearLayout>
		
		
	<Button android:id="@+id/location_set"
		android:text="@string/set_location"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
	/>
	
	<edu.mit.mel.locast.mobile.widget.TagList
	android:id="@+id/new_cast_tags"
	 android:layout_width="fill_parent"
	 android:layout_height="wrap_content"
	/>

</LinearLayout>
</ScrollView>
    
<LinearLayout android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:gravity="bottom"
    android:layout_gravity="bottom"
    style="@android:style/ButtonBar"
    >
    <Button android:text="@string/done" 
    android:id="@+id/done" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"/>
    
    <Button android:text="@android:string/cancel" 
    android:id="@+id/cancel" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>
