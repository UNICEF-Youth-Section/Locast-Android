<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/discussionboardlayout" 
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:orientation="horizontal">

	<ImageView android:id="@+id/user_icon" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
		
	<EditText android:id="@+id/discussionText"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:hint="@string/discussion_hint"
		android:imeOptions="actionSend"
		android:inputType="textMultiLine"
		android:layout_weight="1"
		android:lines="3"/>

	<Button android:id="@+id/send" android:layout_width="wrap_content"
		android:layout_height="fill_parent" android:text="Send"
		android:layout_gravity="right" />
</LinearLayout>