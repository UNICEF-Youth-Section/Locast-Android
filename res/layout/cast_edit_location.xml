<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/cast_edit_location"
>

	<org.osmdroid.views.MapView
		android:id="@+id/map"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:clickable="true"

		android:apiKey="0mv3f-QVdQ_DwBwdfkqD1df8s37Ezhu5qfmJR_A" />


	<View
		android:background="@drawable/shadow_top"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:clickable="false"
		android:longClickable="false"
		android:focusable="false" />

	<Button
		android:id="@+id/center_on_current_location"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Center on my location"
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true"
		android:layout_margin="15dip" />

	<Button
		android:id="@+id/set_current_location"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"

		android:background="@drawable/ic_map_cast_location_pending"
		android:layout_centerInParent="true" />

</RelativeLayout>