<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@android:color/white"
>
	<include
		layout="@layout/action_bar" />

	<TextView android:id="@+id/title"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textStyle="bold"
		android:layout_below="@id/action_bar"
		android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip"
		android:layout_marginTop="10dip"
		/>
	<TextView android:id="@+id/author" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/title"
		android:layout_alignLeft="@id/title"
		android:layout_alignRight="@id/title"
	/>
	<TextView  android:id="@+id/description"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/author"
		android:layout_alignLeft="@id/author"
		android:layout_alignRight="@id/title"
		android:layout_marginTop="10dip"
		/>
		
	<GridView  android:id="@+id/cast_media"
		android:stretchMode="spacingWidthUniform"
		android:numColumns="auto_fit"
		android:gravity="top|left"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/description"
		android:layout_above="@+id/map"
		android:layout_alignLeft="@id/description"
		android:layout_alignRight="@id/description"
		
	/>
		
	<com.google.android.maps.MapView
		android:id="@+id/map"
		android:layout_width="fill_parent"
		android:layout_height="150dip"
		
		android:layout_alignParentBottom="true"
		
		android:clickable="true"
		android:visibility="invisible"
		android:apiKey="0mv3f-QVdQ_CF3MFrN2I0MO8Wgu_QPqzOKx2GHw" />

	<!-- Android Debug key: 0mv3f-QVdQ_CF3MFrN2I0MO8Wgu_QPqzOKx2GHw (debug fprint 
		FC:84:2A:A7:F4:7E:5C:49:CD:6A:C7:0C:3B:A6:BE:E1) -->

</RelativeLayout>
