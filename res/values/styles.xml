<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!--  MAIN -->
 	 
 	<!-- This is needed as API level 5 doesn't seem to respect the API-level qualifier. -->
 	<style name="LightTheme" parent="@android:style/Theme.Light">
        <item name="android:tabWidgetStyle">@android:style/Widget.TabWidget</item>
	 </style>
 	
    <style name="Theme.NoBackground" parent="@android:style/Theme.Light">
        <item name="android:windowBackground">@null</item>
    </style>
    
	 <style name="LocastTheme" parent="LightTheme">
		
        <item name="android:listSeparatorTextViewStyle">@style/ListSeparatorLight</item>
		
	 </style>
	 
	 <style name="ListSeparatorLight" parent="@android:style/Widget.TextView.ListSeparator.White">
        <item name="android:background">@drawable/light_header</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">25dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">5sp</item>
	 
        <item name="android:textColor">?android:textColorPrimary</item>
	 </style>
    
 	<style name="LocationLink" parent="@android:style/Widget.Button">
 	
 	</style>

 	<style name="WindowTitleThick">
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">#77000000</item>
        <item name="android:shadowRadius">2.75</item>
        <item name="android:paddingLeft">4dip</item>
        <item name="android:paddingTop">4dip</item>
        
 		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
 		<item name="android:textColor">#000</item>
 	</style>

 	<style name="WindowTitleThick.Background">
        <item name="android:background">@drawable/window_title_background</item>
        <item name="android:padding">3dip</item>
<!--         <item name="android:background">@android:drawable/title_bar</item> -->
 	</style>
 	
 	
 	<style name="WindowTitleThick.Subtitle">
		<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
		
 	</style>
 		
 	<style name="CastIcon">
 		<item name="android:background">@android:drawable/picture_frame</item>
 		<item name="android:scaleType">centerCrop</item>
 		<item name="android:adjustViewBounds">true</item>
 		
 	</style>
 	
 	<style name="DiscussionUserIcon">
 		<item name="android:padding">3dip</item>
 		<item name="android:scaleType">fitCenter</item>
 		<item name="android:adjustViewBounds">true</item>
 		<item name="android:src">@drawable/icon_default_user</item>
 	</style>
	
	<style name="TemplatedVideo">
		<item name="android:background">@drawable/camera_background</item>
	</style>
	<style name="TemplatedVideoControls">
		<item name="android:background">@drawable/btn_mode_switch_bg</item>
		<item name="android:padding">5dip</item>
		
	</style>

	<style name="TemplatedVideoTextPromptSwitcher">
	  	<item name="android:inAnimation">@anim/push_up_in</item>
  		<item name="android:outAnimation">@anim/push_down_out</item>
  		<item name="android:layout_marginLeft">6sp</item>
  		<item name="android:layout_marginRight">6sp</item>
	</style>
	<style name="TemplatedVideoTextPrompt">
		<item name="android:textSize">24sp</item>
		<item name="android:textColor">@color/template_item_text_color</item>
		<item name="android:gravity">bottom|left</item>
	</style>
	<style name="TemplatedVideoTextPrompt.OSD">
		<item name="android:textColor">#fff</item>
		<item name="android:textStyle">bold</item>
		<item name="android:padding">2sp</item>
	</style>
	<style name="TemplatedVideoProgress" parent="@android:style/TextAppearance.Medium">
		<item name="android:textColor">#ddd</item>
		<item name="android:gravity">center</item>
		<item name="android:shadowColor">#000</item>
		<item name="android:shadowRadius">2.0</item>
	</style>
	<style name="TemplatedVideoProgress.Container" parent="@android:style/Widget.ProgressBar.Horizontal">
		<item name="android:background">@drawable/progress_selector</item>
		<item name="android:paddingTop">4dp</item>
		<item name="android:paddingBottom">4dp</item>
	</style>
	<style name="TemplatedVideoProgress.Item" parent="@android:style/Widget.ProgressBar.Horizontal">
		<item name="android:background">@drawable/progress_selector</item>
	</style>
	<style name="TemplatedVideoProgress.ItemText">
	</style>
</resources>
